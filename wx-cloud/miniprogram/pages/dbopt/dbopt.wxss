.page-body {
  width: 100%;
  height: 100%;
  background-color: wheat;
}

.page-section {
  width: 90%;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx auto;
  padding: 20rpx;
}

.page-section-title {
  text-align: center;
  font-size: 40rpx;
}

.page-section-content {
  width: 100%;
}

.page-section-content button {
  margin: 20rpx auto;
  width: 100% !important;
}

.section-row {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-items: flex-end;
  margin-top: 10rpx;
}
.section-row text{
  text-align: right;
  width: 200rpx;
}

.input-style {
  background-color: #bbbbe4;
  margin-top: 25rpx;
  height: 30rpx;
  border-radius: 5rpx;
  margin-left: 10rpx;
}