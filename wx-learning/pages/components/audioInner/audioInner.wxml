<!-- 当前为播放状态 -->
<view class="audio-play" wx:if="{{isPlay}}">
  <image class="audio-play-img" src="http://y.gtimg.cn/music/photo_new/T002R300x300M000003rsKF44GyaSk.jpg?max_age=2592000"></image>
  <button bindtap="stop">暂停</button>
</view>
<!-- 当前为停止状态 -->
<view class="audio-stop" wx:else>
  <image class="audio-stop-img" src="http://y.gtimg.cn/music/photo_new/T002R300x300M000003rsKF44GyaSk.jpg?max_age=2592000"></image>
  <button  bindtap="play">播放</button>
</view>
