page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  position: relative;

  /* 下面的样式是为了去掉全局样式中的影响 */
  display: block;
  box-sizing: content-box;
}

.canvas_area {
  width: 100%;
  height: 100%;
  background-color: lightcyan;
}

.mycanvas {
  width: 100%;
  height: 100%;
}

.canvas_tools {
  position: fixed;
  left: 0;
  bottom: 20rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}

.box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rebeccapurple;
}

.box3{
  background-color: red;
}
.box4{
  background-color: yellow;
}